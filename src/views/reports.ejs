   <!-- Bar Chart Script -->
<script>
  am5.ready(function () {
    const expenseData = <%- JSON.stringify(expenseData) %>;
    let maxAmount = Math.max(...expenseData.map(item => item.amount));

    var barRoot = am5.Root.new("chartdiv");

    barRoot.setThemes([am5themes_Animated.new(barRoot)]);

    var barChart = barRoot.container.children.push(
      am5xy.XYChart.new(barRoot, {
        panX: false,
        panY: false,
        wheelX: "none",
        wheelY: "none",
        layout: barRoot.verticalLayout
      })
    );

    var yAxis = barChart.yAxes.push(
      am5xy.CategoryAxis.new(barRoot, {
        categoryField: "date",
        renderer: am5xy.AxisRendererY.new(barRoot, {
          minGridDistance: 5
        })
      })
    );

    yAxis.get("renderer").labels.template.setAll({
      maxWidth: 40,
      oversizedBehavior: "truncate",
      fontSize: 10,
      marginRight: 0,
      paddingLeft: 0
    });

    var xAxis = barChart.xAxes.push(
      am5xy.ValueAxis.new(barRoot, {
        renderer: am5xy.AxisRendererX.new(barRoot, {
          minGridDistance: 50
        })
      })
    );

    xAxis.setAll({
      min: 0,
      max: maxAmount,
      strictMinMax: true
    });

    var barSeries = barChart.series.push(
      am5xy.ColumnSeries.new(barRoot, {
        name: "Expenses",
        xAxis: xAxis,
        yAxis: yAxis,
        valueXField: "amount",
        categoryYField: "date",
        tooltip: am5.Tooltip.new(barRoot, {
          labelText: "₹{valueX}"
        })
      })
    );

    barSeries.columns.template.setAll({
      tooltipX: 0,
      cornerRadiusTR: 5,
      cornerRadiusBR: 5,
      strokeOpacity: 0
    });

    yAxis.data.setAll(expenseData);
    barSeries.data.setAll(expenseData);

    barSeries.appear(1500);
    barChart.appear(1000, 100);
  });
</script>

<!-- Pie Chart Script -->
<script>
  am5.ready(function () {
    const pieData = <%- JSON.stringify(groupedArray) %>;

    var pieRoot = am5.Root.new("piechartdiv");

    pieRoot.setThemes([am5themes_Animated.new(pieRoot)]);

    var pieChart = pieRoot.container.children.push(
      am5percent.PieChart.new(pieRoot, {
        layout: pieRoot.verticalLayout
      })
    );

    var pieSeries = pieChart.series.push(
      am5percent.PieSeries.new(pieRoot, {
        valueField: "amount",
        categoryField: "category",
        alignLabels: true
      })
    );

    if (window.innerWidth < 500) {
  pieSeries.set("labelsInside", true);
  pieSeries.set("radius", am5.percent(80));
  pieSeries.labels.template.setAll({
    textAlign: "center",
//     fontSize: 10
  });
}


pieSeries.labels.template.setAll({
  fontSize: 12,
  maxWidth: 60,
